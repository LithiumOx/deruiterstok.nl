{
    "name": "deruiterstok.nl",
    "version": "0.0.1",
    "scripts": {
        "dev:only": "svelte-kit dev --host",
        "dev": "concurrently \"yarn run dev:only\" \"yarn run tailwind:watch\"",
        "build:only": "svelte-kit build",
        "build": "yarn run tailwind:build && yarn run build:only",
        "build:css": "postcss src/styles/tailwind.css -o build/tailwind.css",
        "preview": "svelte-kit preview",
        "tailwind:watch": "cross-env TAILWIND_MODE=watch cross-env NODE_ENV=development postcss src/styles/tailwind.css -o src/styles/tailwind-output.css -w",
        "tailwind:build": "cross-env TAILWIND_MODE=build cross-env NODE_ENV=production postcss src/styles/tailwind.css -o src/styles/tailwind-output.css",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^1.0.0-next.18",
        "@sveltejs/kit": "next",
        "@types/cookie": "^0.4.0",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "autoprefixer": "^10.3.1",
        "cssnano": "^5.0.6",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-svelte3": "^3.2.0",
        "postcss": "^8.3.6",
        "postcss-100vh-fix": "^1.0.2",
        "postcss-load-config": "^3.1.0",
        "prettier": "~2.2.1",
        "prettier-plugin-svelte": "^2.2.0",
        "svelte": "^3.34.0",
        "svelte-check": "^2.0.0",
        "svelte-preprocess": "^4.7.4",
        "tailwindcss": "^2.2.17",
        "tslib": "^2.0.0",
        "typescript": "^4.0.0"
    },
    "type": "module",
    "dependencies": {
        "@dimfeld/svelte-lazyload": "^0.0.4",
        "@dopry/svelte-auth0": "^2.0.0",
        "@fontsource/fira-mono": "^4.2.2",
        "@hapi/iron": "^6.0.0",
        "@lukeed/uuid": "^2.0.0",
        "@magic-sdk/admin": "^1.3.0",
        "@tailwindcss/typography": "^0.4.1",
        "concurrently": "^6.2.1",
        "cookie": "^0.4.1",
        "cross-env": "^7.0.3",
        "daisyui": "^1.14.0",
        "dotenv": "^10.0.0",
        "instascan": "^1.0.0",
        "magic-sdk": "^6.0.5",
        "postcss-cli": "^9.0.1",
        "svelte-forms-lib": "^1.10.7",
        "svelte-lazyload": "^0.0.4",
        "svelte-qr-scanner": "^1.1.0",
        "svelte-stripe-js": "^0.0.8"
    }
}
